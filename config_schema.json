{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Stock & Crypto Ticker Plugin Configuration",
  "description": "Configuration schema for the stock and crypto ticker plugin",
  "properties": {
    "enabled": {
      "type": "boolean",
      "description": "Enable or disable the stock ticker plugin",
      "default": true
    },
    "display_duration": {
      "type": "number",
      "description": "How long to show the ticker (10-300 seconds)",
      "minimum": 10,
      "maximum": 300,
      "default": 30
    },
    "scroll_speed": {
      "type": "number",
      "description": "Scrolling speed multiplier",
      "minimum": 0.5,
      "maximum": 5.0,
      "default": 1.0
    },
    "scroll_delay": {
      "type": "number",
      "description": "Delay between scroll steps in seconds",
      "minimum": 0.001,
      "maximum": 0.1,
      "default": 0.01
    },
    "enable_scrolling": {
      "type": "boolean",
      "description": "Enable or disable scrolling animation",
      "default": true
    },
    "dynamic_duration": {
      "type": "boolean",
      "description": "Enable dynamic duration based on content width",
      "default": true
    },
    "min_duration": {
      "type": "number",
      "description": "Minimum display duration in seconds",
      "minimum": 10,
      "maximum": 300,
      "default": 30
    },
    "max_duration": {
      "type": "number",
      "description": "Maximum display duration in seconds",
      "minimum": 30,
      "maximum": 600,
      "default": 300
    },
    "duration_buffer": {
      "type": "number",
      "description": "Buffer percentage for dynamic duration calculation",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 0.1
    },
    "toggle_chart": {
      "type": "boolean",
      "description": "Enable chart display toggle",
      "default": false
    },
    "font_size": {
      "type": "number",
      "description": "Font size for stock information",
      "minimum": 8,
      "maximum": 16,
      "default": 10
    },
    "update_interval": {
      "type": "number",
      "description": "Data refresh interval in seconds",
      "minimum": 60,
      "maximum": 3600,
      "default": 600
    },
    "symbols": {
      "type": "array",
      "description": "List of stock symbols to track",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{1,5}$"
      },
      "default": ["AAPL", "GOOGL", "MSFT", "TSLA", "AMZN", "META"],
      "maxItems": 20
    },
    "crypto": {
      "type": "object",
      "description": "Cryptocurrency configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable cryptocurrency tracking",
          "default": true
        },
        "crypto_symbols": {
          "type": "array",
          "description": "List of cryptocurrency symbols to track",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,10}$"
          },
          "default": ["BTC", "ETH", "ADA", "SOL", "DOT"],
          "maxItems": 10
        },
        "show_change": {
          "type": "boolean",
          "description": "Show price change for crypto",
          "default": true
        },
        "show_percentage": {
          "type": "boolean",
          "description": "Show percentage change for crypto",
          "default": true
        },
        "text_color": {
          "type": "array",
          "description": "Text color for crypto (RGB)",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          },
          "minItems": 3,
          "maxItems": 3,
          "default": [255, 215, 0]
        },
        "positive_color": {
          "type": "array",
          "description": "Positive change color for crypto (RGB)",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          },
          "minItems": 3,
          "maxItems": 3,
          "default": [0, 255, 0]
        },
        "negative_color": {
          "type": "array",
          "description": "Negative change color for crypto (RGB)",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          },
          "minItems": 3,
          "maxItems": 3,
          "default": [255, 0, 0]
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "show_change": {
      "type": "boolean",
      "description": "Show price change for stocks",
      "default": true
    },
    "show_percentage": {
      "type": "boolean",
      "description": "Show percentage change for stocks",
      "default": true
    },
    "show_volume": {
      "type": "boolean",
      "description": "Show trading volume",
      "default": false
    },
    "show_market_cap": {
      "type": "boolean",
      "description": "Show market capitalization",
      "default": false
    },
    "text_color": {
      "type": "array",
      "description": "Default text color (RGB)",
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [255, 255, 255]
    },
    "positive_color": {
      "type": "array",
      "description": "Positive change color (RGB)",
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [0, 255, 0]
    },
    "negative_color": {
      "type": "array",
      "description": "Negative change color (RGB)",
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [255, 0, 0]
    },
    "background_service": {
      "type": "object",
      "description": "Background data service configuration",
      "properties": {
        "request_timeout": {
          "type": "number",
          "description": "Request timeout in seconds",
          "minimum": 5,
          "maximum": 120,
          "default": 30
        },
        "max_retries": {
          "type": "number",
          "description": "Maximum number of retries",
          "minimum": 1,
          "maximum": 10,
          "default": 5
        },
        "priority": {
          "type": "number",
          "description": "Background service priority",
          "minimum": 1,
          "maximum": 5,
          "default": 2
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["enabled"],
  "additionalProperties": false
}
