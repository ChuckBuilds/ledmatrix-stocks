{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stocks Ticker Plugin Configuration",
  "description": "Configuration schema for the Stocks Ticker plugin",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable or disable the stocks ticker plugin"
    },
    "global_display_duration": {
      "type": "number",
      "default": 30,
      "minimum": 10,
      "maximum": 300,
      "description": "Duration in seconds to display the stocks ticker"
    },
    "global_update_interval": {
      "type": "integer",
      "default": 600,
      "minimum": 30,
      "maximum": 3600,
      "description": "How often to fetch new stock data (seconds)"
    },
    "global_scroll_speed": {
      "type": "number",
      "default": 1,
      "minimum": 0.1,
      "maximum": 10,
      "description": "Scrolling speed multiplier"
    },
    "global_scroll_delay": {
      "type": "number",
      "default": 0.01,
      "minimum": 0.001,
      "maximum": 0.1,
      "description": "Delay between scroll steps in seconds"
    },
    "global_toggle_chart": {
      "type": "boolean",
      "default": true,
      "description": "Enable chart display toggle"
    },
    "global_dynamic_duration": {
      "type": "boolean",
      "default": true,
      "description": "Enable dynamic duration based on content width"
    },
    "global_min_duration": {
      "type": "integer",
      "default": 30,
      "minimum": 10,
      "maximum": 300,
      "description": "Minimum display duration when dynamic duration is enabled"
    },
    "global_max_duration": {
      "type": "integer",
      "default": 300,
      "minimum": 30,
      "maximum": 600,
      "description": "Maximum display duration when dynamic duration is enabled"
    },
    "global_duration_buffer": {
      "type": "number",
      "default": 0.1,
      "minimum": 0.01,
      "maximum": 1.0,
      "description": "Duration buffer for dynamic duration calculation"
    },
    "global_scroll_pixels_per_second": {
      "type": "number",
      "default": 20.0,
      "minimum": 5.0,
      "maximum": 50.0,
      "description": "Scroll speed in pixels per second"
    },
    "global_scroll_target_fps": {
      "type": "number",
      "default": 100.0,
      "minimum": 30.0,
      "maximum": 200.0,
      "description": "Target FPS for scrolling"
    },
    "global_scroll_mode": {
      "type": "string",
      "enum": ["one_shot", "continuous"],
      "default": "one_shot",
      "description": "Scrolling mode"
    },
    "global_scroll_direction": {
      "type": "string",
      "enum": ["left", "right"],
      "default": "left",
      "description": "Scroll direction"
    },
    "global_enable_scroll_metrics": {
      "type": "boolean",
      "default": false,
      "description": "Enable scroll performance metrics"
    },
    "global_display_format": {
      "type": "string",
      "default": "{symbol}: ${price} ({change}%)",
      "description": "Display format for stock information"
    },
    "global_toggle_chart_alt": {
      "type": "boolean",
      "default": false,
      "description": "Enable chart display toggle"
    },
    "global_font_size": {
      "type": "integer",
      "default": 10,
      "minimum": 8,
      "maximum": 16,
      "description": "Font size for stock information"
    },
    "global_background_service_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable background data fetching"
    },
    "global_background_service_request_timeout": {
      "type": "integer",
      "default": 30,
      "minimum": 10,
      "maximum": 120,
      "description": "Request timeout in seconds"
    },
    "global_background_service_max_retries": {
      "type": "integer",
      "default": 5,
      "minimum": 1,
      "maximum": 10,
      "description": "Maximum number of retries for failed requests"
    },
    "global_background_service_priority": {
      "type": "integer",
      "default": 2,
      "minimum": 1,
      "maximum": 5,
      "description": "Priority for background requests (1=highest, 5=lowest)"
    },
    "stocks_symbols": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{1,5}$",
        "description": "Stock symbol (e.g., AAPL, GOOGL)"
      },
      "uniqueItems": true,
      "maxItems": 50,
      "default": ["ASTS", "SCHD", "INTC", "NVDA", "T", "VOO", "SMCI"],
      "description": "List of stock symbols to track"
    },
    "stocks_show_change": {
      "type": "boolean",
      "default": true,
      "description": "Show price change indicators"
    },
    "stocks_show_percentage": {
      "type": "boolean",
      "default": true,
      "description": "Show percentage change"
    },
    "stocks_show_volume": {
      "type": "boolean",
      "default": false,
      "description": "Show trading volume"
    },
    "stocks_show_market_cap": {
      "type": "boolean",
      "default": false,
      "description": "Show market capitalization"
    },
    "stocks_text_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [255, 255, 255],
      "description": "RGB color for stock text"
    },
    "stocks_positive_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [0, 255, 0],
      "description": "RGB color for positive changes"
    },
    "stocks_negative_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [255, 0, 0],
      "description": "RGB color for negative changes"
    },
    "crypto_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable cryptocurrency tracking"
    },
    "crypto_crypto_symbols": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{3,5}$",
        "description": "Crypto symbol (e.g., BTC, ETH)"
      },
      "uniqueItems": true,
      "maxItems": 20,
      "default": ["BTC", "ETH", "ADA"],
      "description": "List of cryptocurrency symbols to track"
    },
    "crypto_show_change": {
      "type": "boolean",
      "default": true,
      "description": "Show price change indicators"
    },
    "crypto_show_percentage": {
      "type": "boolean",
      "default": true,
      "description": "Show percentage change"
    },
    "crypto_text_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [255, 215, 0],
      "description": "RGB color for crypto text"
    },
    "crypto_positive_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [0, 255, 0],
      "description": "RGB color for positive changes"
    },
    "crypto_negative_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [255, 0, 0],
      "description": "RGB color for negative changes"
    }
  },
  "additionalProperties": false,
  "required": ["enabled"]
}
