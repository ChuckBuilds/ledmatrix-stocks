{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Stock & Crypto Ticker Plugin Configuration",
  "description": "Configuration schema for the stock and crypto ticker plugin",
  "properties": {
    "enabled": {
      "type": "boolean",
      "description": "Enable or disable the stock ticker plugin",
      "default": false
    },
    "update_interval": {
      "type": "integer",
      "description": "Data refresh interval in seconds",
      "minimum": 60,
      "maximum": 3600,
      "default": 600
    },
    "display": {
      "type": "object",
      "description": "Display and scrolling settings",
      "properties": {
        "scroll_speed": {
          "type": "number",
          "description": "Scrolling speed in pixels per frame",
          "minimum": 0.5,
          "maximum": 5.0,
          "default": 1.0
        },
        "scroll_delay": {
          "type": "number",
          "description": "Delay between scroll steps in seconds",
          "minimum": 0.001,
          "maximum": 0.1,
          "default": 0.02
        },
        "toggle_chart": {
          "type": "boolean",
          "description": "Enable chart display toggle",
          "default": true
        },
        "dynamic_duration": {
          "type": "boolean",
          "description": "Enable dynamic duration based on content width",
          "default": true
        },
        "min_duration": {
          "type": "number",
          "description": "Minimum display duration in seconds",
          "minimum": 10,
          "maximum": 300,
          "default": 30
        },
        "max_duration": {
          "type": "number",
          "description": "Maximum display duration in seconds",
          "minimum": 30,
          "maximum": 600,
          "default": 300
        },
        "duration_buffer": {
          "type": "number",
          "description": "Buffer percentage for dynamic duration calculation",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 0.1
        }
      },
      "additionalProperties": false
    },
    "stocks": {
      "type": "object",
      "description": "Stock ticker configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable stock tracking",
          "default": true
        },
        "symbols": {
          "type": "array",
          "description": "List of stock symbols to track",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{1,5}$"
          },
          "default": ["ASTS", "SCHD", "INTC", "NVDA", "T", "VOO", "SMCI"],
          "maxItems": 20
        },
        "display_format": {
          "type": "string",
          "description": "Display format string. Use {symbol}, {price}, {change} as placeholders",
          "default": "{symbol}: ${price} ({change}%)"
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "crypto": {
      "type": "object",
      "description": "Cryptocurrency ticker configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable cryptocurrency tracking",
          "default": false
        },
        "update_interval": {
          "type": "integer",
          "description": "Data refresh interval in seconds",
          "minimum": 60,
          "maximum": 3600,
          "default": 600
        },
        "symbols": {
          "type": "array",
          "description": "List of cryptocurrency symbols to track",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,10}(-USD)?$"
          },
          "default": ["BTC-USD", "ETH-USD"],
          "maxItems": 10
        },
        "display_format": {
          "type": "string",
          "description": "Display format string. Use {symbol}, {price}, {change} as placeholders",
          "default": "{symbol}: ${price} ({change}%)"
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "customization": {
      "type": "object",
      "description": "Display customization options (colors, fonts, etc.)",
      "properties": {
        "stocks": {
          "type": "object",
          "description": "Stock display customization",
          "properties": {
            "symbol": {
              "type": "object",
              "description": "Symbol text customization (font and color)",
              "properties": {
                "font_size": {
                  "type": "integer",
                  "description": "Font size for symbol text",
                  "minimum": 4,
                  "maximum": 16,
                  "default": 8
                },
                "font": {
                  "type": "string",
                  "description": "Font file to use for symbol text",
                  "enum": [
                    "PressStart2P-Regular.ttf",
                    "4x6-font.ttf",
                    "5by7.regular.ttf",
                    "5x7.bdf",
                    "4x6.bdf",
                    "cozette.bdf"
                  ],
                  "default": "PressStart2P-Regular.ttf"
                },
                "text_color": {
                  "type": "array",
                  "description": "Text color for symbol (RGB)",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [255, 255, 255]
                }
              },
              "additionalProperties": false
            },
            "price": {
              "type": "object",
              "description": "Price text customization (font and color)",
              "properties": {
                "font_size": {
                  "type": "integer",
                  "description": "Font size for price text",
                  "minimum": 4,
                  "maximum": 16,
                  "default": 8
                },
                "font": {
                  "type": "string",
                  "description": "Font file to use for price text",
                  "enum": [
                    "PressStart2P-Regular.ttf",
                    "4x6-font.ttf",
                    "5by7.regular.ttf",
                    "5x7.bdf",
                    "4x6.bdf",
                    "cozette.bdf"
                  ],
                  "default": "PressStart2P-Regular.ttf"
                },
                "text_color": {
                  "type": "array",
                  "description": "Text color for price (RGB)",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [255, 255, 255]
                }
              },
              "additionalProperties": false
            },
            "price_delta": {
              "type": "object",
              "description": "Price change/percentage text customization (font and colors)",
              "properties": {
                "font_size": {
                  "type": "integer",
                  "description": "Font size for price delta text",
                  "minimum": 4,
                  "maximum": 16,
                  "default": 8
                },
                "font": {
                  "type": "string",
                  "description": "Font file to use for price delta text",
                  "enum": [
                    "PressStart2P-Regular.ttf",
                    "4x6-font.ttf",
                    "5by7.regular.ttf",
                    "5x7.bdf",
                    "4x6.bdf",
                    "cozette.bdf"
                  ],
                  "default": "PressStart2P-Regular.ttf"
                },
                "positive_color": {
                  "type": "array",
                  "description": "Color for positive changes (RGB)",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [0, 255, 0]
                },
                "negative_color": {
                  "type": "array",
                  "description": "Color for negative changes (RGB)",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [255, 0, 0]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "crypto": {
          "type": "object",
          "description": "Crypto display customization",
          "properties": {
            "symbol": {
              "type": "object",
              "description": "Symbol text customization (font and color)",
              "properties": {
                "font_size": {
                  "type": "integer",
                  "description": "Font size for symbol text",
                  "minimum": 4,
                  "maximum": 16,
                  "default": 8
                },
                "font": {
                  "type": "string",
                  "description": "Font file to use for symbol text",
                  "enum": [
                    "PressStart2P-Regular.ttf",
                    "4x6-font.ttf",
                    "5by7.regular.ttf",
                    "5x7.bdf",
                    "4x6.bdf",
                    "cozette.bdf"
                  ],
                  "default": "PressStart2P-Regular.ttf"
                },
                "text_color": {
                  "type": "array",
                  "description": "Text color for symbol (RGB)",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [255, 215, 0]
                }
              },
              "additionalProperties": false
            },
            "price": {
              "type": "object",
              "description": "Price text customization (font and color)",
              "properties": {
                "font_size": {
                  "type": "integer",
                  "description": "Font size for price text",
                  "minimum": 4,
                  "maximum": 16,
                  "default": 8
                },
                "font": {
                  "type": "string",
                  "description": "Font file to use for price text",
                  "enum": [
                    "PressStart2P-Regular.ttf",
                    "4x6-font.ttf",
                    "5by7.regular.ttf",
                    "5x7.bdf",
                    "4x6.bdf",
                    "cozette.bdf"
                  ],
                  "default": "PressStart2P-Regular.ttf"
                },
                "text_color": {
                  "type": "array",
                  "description": "Text color for price (RGB)",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [255, 215, 0]
                }
              },
              "additionalProperties": false
            },
            "price_delta": {
              "type": "object",
              "description": "Price change/percentage text customization (font and colors)",
              "properties": {
                "font_size": {
                  "type": "integer",
                  "description": "Font size for price delta text",
                  "minimum": 4,
                  "maximum": 16,
                  "default": 8
                },
                "font": {
                  "type": "string",
                  "description": "Font file to use for price delta text",
                  "enum": [
                    "PressStart2P-Regular.ttf",
                    "4x6-font.ttf",
                    "5by7.regular.ttf",
                    "5x7.bdf",
                    "4x6.bdf",
                    "cozette.bdf"
                  ],
                  "default": "PressStart2P-Regular.ttf"
                },
                "positive_color": {
                  "type": "array",
                  "description": "Color for positive changes (RGB)",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [0, 255, 0]
                },
                "negative_color": {
                  "type": "array",
                  "description": "Color for negative changes (RGB)",
                  "items": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 255
                  },
                  "minItems": 3,
                  "maxItems": 3,
                  "default": [255, 0, 0]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["enabled"],
  "additionalProperties": false
}
